<div class="formulaire">
<%= form_with model: @article do |form| %>
    <h1>Edit Article</h1>
  <div class="mb-3">
    <%= form.label :title ,class: "form-label" %><br>
    <%= form.text_field :title ,class: "form-control" %>
    <% @article.errors.full_messages_for(:title).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
    <%= form.label :body ,class: "form-label" %><br>
    <%= form.text_area :body ,class: "form-control", rows: 3 %><br>
    <% @article.errors.full_messages_for(:body).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div class="mb-3">
  <%= form.label :status ,class: "form-label" %><br>
  <%= form.select :status, Visible::VALID_STATUSES, { selected: @article.status || 'public' }, { class: "form-select", aria: { label: "Default select example" } } %>
  </div>

  <div>
    <%= form.submit "Edit", class: "btn btn-primary"%>
  </div>
<% end %>
</div>
