<% if flash[:notice] %>
<div class="alert alert-info mt-4" role="alert">
    <%= flash[:notice] %>
</div>
<% end%>
<!-- we put the equal only if we will print-->
<% if flash[:alert] %>
<div class="alert alert-warning mt-4" role="alert">
    <%= flash[:alert] %>
</div>
<% end%>
<!-- The flash message disappears after the next request-->